// Faust.erbui

module Faust {
   width 12hp
   board kivu12
   material aluminum
   header { label "FAUST2" }

   faust {
      init { address "/PHASER2/0x00/Invert Internal Phaser Sum" value 0 }
      init { address "/PHASER2/0x00/Vibrato Mode" value 0.0 }
   }

   control bypass Switch {
      faust { bind { address "/PHASER2/0x00/Bypass" } }
      position 6hp, 80mm
      style dailywell, on_on
      label "BYPASS"
   }

   control compression_gain Pot {
      faust { bind { address "/PHASER2/0x00/Speed" } }
      position 6hp, 60mm
      style rogan, 2ps
      label "SPEED"
   }

   control notch_depth Pot {
      faust { bind { address "/PHASER2/0x00/Notch Depth (Intensity)" } }
      position 2hp, 40mm
      style rogan, 1ps
      label "DEPTH"
   }

   control notch_width Pot {
      faust { bind { address "/PHASER2/0x00/Notch width" } }
      position 6hp, 40mm
      style rogan, 1ps
      label "WIDTH"
   }

   control level Pot {
      faust { bind { address "/PHASER2/0x00/Phaser Output Level" } }
      position 10hp, 40mm
      style rogan, 1ps
      label "LEVEL"
   }

   control led Led {
      faust { init { value 1.0 } }
      position 2hp, 80mm
      style red
      label "LED"
   }

   control led_bi LedBi {
      faust {
         init { property r value 0.5 }
         init { property g value 0.0 }
      }
      position 10hp, 80mm
      style green_red
      label "LED"
   }

   control audio_in AudioIn {
      position 4hp, 96mm
      style knurled
      label "IN L"
   }

   control audio_in2 AudioIn {
      position 8hp, 96mm
      style knurled
      label "IN R"
   }

   control audio_out AudioOut {
      position 4hp, 111mm
      style knurled
      label "OUT L"
   }

   control audio_out2 AudioOut {
      position 8hp, 111mm
      style knurled
      label "OUT R"
   }
}
